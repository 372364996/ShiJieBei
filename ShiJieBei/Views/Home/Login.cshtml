@model string
@{
    Layout = null;
}
<!DOCTYPE html>
<html class="ui-page-login">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width,initial-scale=1,minimum-scale=1,maximum-scale=1,user-scalable=no" />
    <title>世界杯竞猜</title>

    <link href="~/Content/css/mui.min.css" rel="stylesheet" />
    <link href="~/Content/css/login.css" rel="stylesheet" />
</head>

<body>
    <div class="mui-content">
        <div class="mui-row login-img">
            <div class="mui-col-sm-3 mui-col-xs-3">
            </div>
            <div class="mui-col-sm-6 mui-col-xs-6">
                <img src="~/Content/img/logo.jpg" width="100%" height="100%" />
                @*<img src="~/Content/img/login/60x60.gif" width="100%" height="100%" />*@
            </div>
        </div>
        <form id='login-form' class="mui-input-group" style="margin: 0px 15px;" method="post" action="/home/login">
            <div class="mui-input-row">
                <input id='account' type="email" name="email" class="mui-input-clear" placeholder="邮箱">
            </div>
            <div class="mui-input-row">
                <input id='password' type="password" name="pwd" class="mui-input-clear" placeholder="密码">
            </div>
            <button id='gologin' type="submit" style="display:none" class="mui-btn mui-btn-block mui-btn-primary">触发登录</button>
        </form>
        <div class="mui-content-padded">
            <button id='login' onclick="goLogin()" class="mui-btn mui-btn-block mui-btn-primary">登录</button>
            <a href="/home/signup"><button id='sign' class="mui-btn mui-btn-block mui-btn-primary">注册</button></a>
            <div class="link-area">
                @*<a id='forgetPassword'>找回密码</a>*@
            </div>
        </div>
    </div>

</body>

</html>
<script src="~/Content/js/jquery.min.js"></script>
<script src="~/Content/js/mui.min.js"></script>
<script>
    function goLogin() {
        $("#gologin").click();
    }
</script>